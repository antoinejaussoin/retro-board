{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "NodeNext",
    "incremental": true,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "lib": ["es2015", "es2017", "dom"],
    "baseUrl": "src"
  },
  "include": ["src", "./package.json"],
  "exclude": ["src/**/*.test.ts"]
}
