{
  "name": "@retrospected/backend",
  "version": "5.5.2",
  "license": "GNU GPLv3",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc --build && yarn copy-templates && cp ./instrument.mjs ./dist/instrument.mjs",
    "start": "nodemon --exec 'yarn fix & node' --import ./ts-node.register.mjs ./src/index.ts",
    "create-migration": "scripty",
    "create-empty-migration": "scripty",
    "hardcode-licence": "scripty",
    "migrate": "typeorm-ts-node-esm -d src/db/index.ts migration:run",
    "revert": "typeorm-ts-node-esm -d src/db/index.ts migration:revert",
    "lint": "biome lint",
    "test": "yarn jest",
    "ci-lint": "biome ci",
    "ci-test": "CI=true yarn test",
    "fix": "biome check --write",
    "backend-production": "yarn migrate-production && cd ./dist/src && node --import ../instrument.mjs index.js",
    "migrate-production": "typeorm -d dist/src/db/index.js migration:run",
    "copy-templates": "copyfiles -u 0 src/**/*.html dist/"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@sendgrid/mail": "8.1.3",
